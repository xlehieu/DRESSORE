<form method='post' id='create-category-form' enctype='multipart/form-data'>
    <div class='row mt-3'>
        <div class='col-12'>
            <h4>THÊM BANNER</h4>
        </div>
        <div class='col-lg-8 col-md-6 col-sm-12 d-flex flex-column gap-4'>
            <div class='d-flex flex-column'>
                <label for='banner-name-create'>TIÊU ĐỀ BANNER</label>
                <input id='banner-name-create' name='name' placeholder='Tiêu đề banner*' class='px-2 py-1 mt-1' />
            </div>
            <div>
                <button class='btn btn-primary fs-5 float-end' type='submit'>THÊM BANNER</button>
            </div>
        </div>
        <div class='col-lg-4 col-md-6 col-sm-12 d-flex flex-column gap-4'>
            <div class='d-flex flex-column'>
                <label for='banner-thumb-create'>HÌNH ẢNH</label>
                <input
                    id='banner-thumb-create'
                    name='thumb'
                    type='file'
                    placeholder='Hình ảnh'
                    class='px-2 py-1 border border-dark'
                />
            </div>
            <div class='d-flex flex-column'>
                <p>HIỂN THỊ</p>
                <div class='form-switch d-flex'>
                    <input class='form-check-input' type='checkbox' name='isShow' id='switch-is-show' />
                    <label class='form-check-label' for='switch-is-show'>Không hiển thị</label>
                </div>
            </div>
        </div>
    </div>
</form>
<script src='/script/admin/banner.js'></script>