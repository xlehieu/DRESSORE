<div class='row'>
    <h3>DANH SÁCH ĐƠN HÀNG</h3>
    <table class='table table-striped table-hover fs-5'>
        <thead>
            <tr>
                <th>#</th>
                <th>KHÁCH HÀNG</th>
                <th>ĐỊA CHỈ GIAO HÀNG</th>
                <th>TỔNG TIỀN</th>
                <th>TRẠNG THÁI</th>
                <th class='text-center'><i class='fa-solid fa-table-cells'></i></th>
            </tr>
        </thead>
        <tbody id='orders-table'>
            {{#each orders}}
                <tr>
                    <td>
                        {{orderUp @index}}
                    </td>
                    <td>
                        {{this.userName}}
                    </td>
                    <td>
                        <div class='d-flex flex-column'>
                            <p>Tên: {{this.shippingAddress.fullName}}</p>
                            <p>Địa chỉ: {{this.shippingAddress.address}}</p>
                            <p>Số điện thoại: {{this.shippingAddress.phone}}</p>
                        </div>
                    </td>
                    <td>
                        {{toVND this.totalPrice}}
                    </td>
                    <td>
                        {{renderStatus this.status}}
                    </td>
                    <td class='text-center'>
                        <a class='btn btn-outline-warning rounded' href='/tui-la-admin/hoa-don/{{this._id}}'>
                            <i class='fa-regular fa-pen-to-square'></i>
                        </a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <nav aria-label='...'>
        <ul id='pagination' class='pagination pagination-sm'>

            {{renderPagination page}}
        </ul>
    </nav>
</div>

<script src='/script/dashboard.js'></script>